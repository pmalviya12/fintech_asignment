<h1>Email Templates</h1>
<p><%= link_to "New Template", new_email_template_path %></p>

<table border="1" cellpadding="5">
  <tr>
    <th>ID</th>
    <th>Subject</th>
    <th>Actions</th>
  </tr>
  <% @templates.each do |t| %>
    <tr>
      <td><%= t.id %></td>
      <td><%= t.subject %></td>
      <td>
        <%= link_to "View", email_template_path(t) %> |
        <%= link_to "Edit", edit_email_template_path(t) %> |
        <%= link_to "Delete", email_template_path(t), method: :delete, data: { confirm: "Are you sure?" } %> |
        <%= link_to "Preview", preview_email_template_path(t) %>
      </td>
    </tr>
  <% end %>
</table>
